<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.android.sidewalk.common.BindingUtils" />

        <variable
                name="profileViewModel"
                type="com.android.sidewalk.viewmodels.profile.ProfileViewModel" />

        <variable
                name="model"
                type="com.android.sidewalk.model.LoginResponse" />

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

        <include
                android:id="@+id/common_tool_bar"
                layout="@layout/common_toolbar_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                android:visibility="gone" />
        <!-- -->
        <include
                android:id="@+id/toolbarCommon"
                layout="@layout/common_toolbar_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                android:visibility="visible" />
        <!---->
        <ScrollView
                android:id="@+id/parent_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorbacLight"
                    android:orientation="vertical">

                <RelativeLayout
                        android:id="@+id/upload_profile_layer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@drawable/shape_round_corner_white"
                        android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_profile"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:contentDescription="@string/todo"
                            app:civ_border_color="@color/colorWhite"
                            app:civ_border_width="3dp" />

                    <LinearLayout
                            android:layout_toRightOf="@+id/img_profile"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/txtUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="@string/fname"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:font="@{`bold`}" />

                        <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_5"
                                android:hint="@string/email"
                                android:textAllCaps="false"
                                android:textColor="@color/colorGrey"
                                android:visibility="visible"
                                app:font="@{`regular`}" />
                    </LinearLayout>


                    <ImageView
                            android:id="@+id/iv_arrow"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:background="@drawable/side_arrow_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                </RelativeLayout>




                <TextView
                        android:id="@+id/txt_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp_30"
                        android:background="@drawable/shape_round_corner_white"
                        android:padding="@dimen/dp_10"
                        android:text="@string/title_notifications"
                        android:textAllCaps="false"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:drawableEnd="@drawable/side_arrow"
                        app:font="@{`bold`}" />


                <TextView
                        android:id="@+id/txt_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_round_corner_white"
                        android:padding="@dimen/dp_10"
                        android:text="@string/privacy_policy"
                        android:textAllCaps="false"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:drawableEnd="@drawable/side_arrow"
                        app:font="@{`bold`}" />

                <TextView
                        android:id="@+id/txt_terms"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp_30"
                        android:background="@drawable/shape_round_corner_white"
                        android:padding="@dimen/dp_10"
                        android:text="@string/terms"
                        android:textAllCaps="false"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:drawableEnd="@drawable/side_arrow"
                        app:font="@{`bold`}" />
                <TextView
                        android:id="@+id/txt_contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp_30"
                        android:background="@drawable/shape_round_corner_white"
                        android:padding="@dimen/dp_10"
                        android:text="@string/contact_us"
                        android:textAllCaps="false"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:drawableEnd="@drawable/side_arrow"
                        app:font="@{`bold`}" />

                <TextView
                        android:id="@+id/txt_log_out"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/dp_30"
                        android:background="@drawable/shape_round_corner_white"
                        android:padding="@dimen/dp_10"
                        android:text="@string/logout"
                        android:textAllCaps="false"
                        android:textColor="@color/colorGrey"
                        android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:drawableEnd="@drawable/side_arrow"
                        app:font="@{`bold`}" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
