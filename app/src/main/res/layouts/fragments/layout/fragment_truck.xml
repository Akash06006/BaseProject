<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.android.sidewalk.common.BindingUtils" />

        <variable
                name="truckViewModel"
                type="com.android.sidewalk.viewmodels.trucks.TrucksViewModel" />

    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/txtNoRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/no_record_found"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:visibility="gone"
                app:font="@{`semibold`}"
                tools:ignore="AllCaps" />

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <include
                            android:id="@+id/toolbarCommon"
                            layout="@layout/common_toolbar_back"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_55" />

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvTrucks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center"
                            android:padding="@dimen/dp_5"
                            android:visibility="visible" />

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/dp_5">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_250"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/truck_blue"
                    app:backgroundTint="@color/colorWhite" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_250"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:outlineAmbientShadowColor="@color/colorPrimary"
                    android:src="@drawable/menu_blue"
                    app:backgroundTint="@color/colorWhite" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_250"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:src="@drawable/ic_plus"
                    app:backgroundTint="@color/colorPrimary" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
