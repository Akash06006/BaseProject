    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgCategory"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_img_back"
                android:scaleType="centerCrop"
                app:riv_corner_radius="12dp"
                app:riv_mutate_background="true" />

        <TextView
                android:id="@+id/txtCatName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/imgVegNonVeg"
                android:layout_toRightOf="@+id/imgCategory"
                android:gravity="center_vertical"
                android:hint="@string/view_all"
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                app:font="@{`semibold`}" />

        <ImageView
                android:id="@+id/imgVegNonVeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_nonveg" />

        <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCatName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/txtPrice"
                android:layout_toRightOf="@+id/imgCategory"
                android:gravity="center_vertical"
                android:hint="@string/view_all"
                android:maxLines="2"
                android:singleLine="true"
                app:font="@{`regular`}" />

        <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCatName"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:singleLine="true"
                android:text="$20"
                android:textColor="@color/colorSecondary"
                android:textSize="16sp"
                app:font="@{`bold`}" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/imgCategory"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.5"
                android:background="@color/colorGrey" />
    </RelativeLayout>
    <!-- </androidx.cardview.widget.CardView>-->
</layout>