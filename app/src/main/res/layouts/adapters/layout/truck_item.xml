    <LinearLayout
            android:id="@+id/topLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/ic_cell_back"
            android:gravity="center"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/imgTruck"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_truck" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_toLeftOf="@+id/chkTruckOn"
                        android:singleLine="true"
                        android:text="Nepal Vally"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:font="@{`bold`}" />

                <CheckBox
                        android:id="@+id/chkTruckOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/dp_5"
                        android:button="@drawable/checkbox_selector" />

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                <RatingBar
                        android:id="@+id/rBar"
                        style="@android:style/Widget.Material.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4"
                        android:stepSize="0.5"
                        android:theme="@style/RatingBar" />

                <TextView
                        android:id="@+id/txtCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:singleLine="true"
                        android:text="(10)"
                        android:textColor="@color/colorBlack"
                        app:font="@{`regular`}" />
            </LinearLayout>

            <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="202, East Food Texas"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp_12"
                    app:font="@{`regular`}" />

            <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="Time: 10:00 AM - 9:00 PM"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp_12"
                    app:font="@{`regular`}" />
        </LinearLayout>

    </LinearLayout>
    <!-- </androidx.cardview.widget.CardView>-->
</layout>