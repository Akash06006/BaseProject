<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.android.sidewalk.common.BindingUtils" />

        <variable
                name="eventViewModel"
                type="com.android.sidewalk.viewmodels.events.EventsViewModel" />

        <variable
                name="detailResponse"
                type="com.android.sidewalk.model.events.EventDetailResponse.Data" />

    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/llButton">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <include
                        android:id="@+id/toolbarCommon"
                        layout="@layout/common_toolbar_back"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_55" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrice"
                            android:orientation="vertical"
                            android:padding="10dp">

                        <TextView
                                android:id="@+id/txtEventName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toLeftOf="@+id/imgChat"

                                android:text="@{detailResponse.eventName}"
                                android:textColor="@color/colorWhite"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:font="@{`semibold`}" />

                        <TextView
                                android:id="@+id/txtAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtEventName"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toLeftOf="@+id/imgChat"

                                android:text="@{detailResponse.location}"
                                android:textColor="@color/colorWhite"
                                app:font="@{`regular`}" />

                        <ImageView
                                android:id="@+id/imgChat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:onClick="@{(v) -> eventViewModel.clickListener(v)}"
                                android:src="@drawable/ic_chat" />
                        <!--android:text="@{model.firstName}"-->

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                        <TextView
                                android:id="@+id/txtCust"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgCust"
                                android:text="@string/cust_name"
                                android:textColor="@color/colorGrey"
                                android:textSize="11sp"
                                app:font="@{`regualr`}" />

                        <TextView
                                android:id="@+id/txtCustName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtCust"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgCust"

                                android:text="@{detailResponse.customerName}"
                                android:textColor="@color/colorBlack"
                                app:font="@{`semibold`}" />

                        <ImageView
                                android:id="@+id/imgCust"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/ic_cust" />
                        <!--android:text="@{model.firstName}"-->

                    </RelativeLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:alpha="0.2"
                            android:background="@color/colorGrey" />

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                        <TextView
                                android:id="@+id/txtDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgDate"
                                android:text="@string/date_time"
                                android:textColor="@color/colorGrey"
                                android:textSize="11sp"
                                app:font="@{`regualr`}" />

                        <TextView
                                android:id="@+id/txtDateTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtDate"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgDate"

                                android:text="@{detailResponse.startDate}"
                                android:textColor="@color/colorBlack"
                                app:font="@{`semibold`}" />

                        <ImageView
                                android:id="@+id/imgDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/ic_date_time" />
                        <!--android:text="@{model.firstName}"-->

                    </RelativeLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:alpha="0.2"
                            android:background="@color/colorGrey" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp">

                            <TextView
                                    android:id="@+id/txtPeo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@+id/imgPeople"
                                    android:text="@string/party_size"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="11sp"
                                    app:font="@{`regualr`}" />

                            <TextView
                                    android:id="@+id/txtPeople"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtPeo"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@+id/imgPeople"

                                    android:text="@{detailResponse.partySize}"
                                    android:textColor="@color/colorBlack"
                                    app:font="@{`semibold`}" />

                            <ImageView
                                    android:id="@+id/imgPeople"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:src="@drawable/ic_people" />
                            <!--android:text="@{model.firstName}"-->

                        </RelativeLayout>

                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp">

                            <TextView
                                    android:id="@+id/txtPay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@+id/imgPayment"
                                    android:text="@string/payment"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="11sp"
                                    app:font="@{`regualr`}" />

                            <TextView
                                    android:id="@+id/txtPayment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtPay"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@+id/imgPayment"

                                    android:text="@{'$'+detailResponse.payment}"
                                    android:textColor="@color/colorBlack"
                                    app:font="@{`semibold`}" />

                            <ImageView
                                    android:id="@+id/imgPayment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:src="@drawable/ic_payment" />
                            <!--android:text="@{model.firstName}"-->

                        </RelativeLayout>
                    </LinearLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:alpha="0.2"
                            android:background="@color/colorGrey" />

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                        <TextView
                                android:id="@+id/txtContact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgContact"
                                android:text="@string/contact_information"
                                android:textColor="@color/colorGrey"
                                android:textSize="11sp"
                                app:font="@{`regualr`}" />

                        <TextView
                                android:id="@+id/txtContactInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtContact"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgContact"

                                android:text="@{detailResponse.customerNumber}"
                                android:textColor="@color/colorBlack"
                                app:font="@{`semibold`}" />

                        <ImageView
                                android:id="@+id/imgContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/ic_contact_info" />
                        <!--android:text="@{model.firstName}"-->

                    </RelativeLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:alpha="0.2"
                            android:background="@color/colorGrey" />

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                        <TextView
                                android:id="@+id/txtMeat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgMeat"
                                android:text="@string/home_many_meats"
                                android:textColor="@color/colorGrey"
                                android:textSize="11sp"
                                app:font="@{`regualr`}" />

                        <TextView
                                android:id="@+id/txtMeatText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtMeat"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgMeat"

                                android:text="@{detailResponse.meat}"
                                android:textColor="@color/colorBlack"
                                app:font="@{`semibold`}" />

                        <ImageView
                                android:id="@+id/imgMeat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/ic_meal" />
                        <!--android:text="@{model.firstName}"-->

                    </RelativeLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:alpha="0.2"
                            android:background="@color/colorGrey" />

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                        <TextView
                                android:id="@+id/txtAdditional"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgAdditional"
                                android:text="@string/additional_information"
                                android:textColor="@color/colorGrey"
                                android:textSize="11sp"
                                app:font="@{`regualr`}" />

                        <TextView
                                android:id="@+id/txtAdditionalInformation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtAdditional"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgAdditional"

                                android:text="@{detailResponse.additionalCustReq}"
                                android:textColor="@color/colorBlack"
                                app:font="@{`semibold`}" />

                        <ImageView
                                android:id="@+id/imgAdditional"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/ic_information" />
                        <!--android:text="@{model.firstName}"-->

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
                android:id="@+id/llButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:weightSum="2">

            <Button
                    android:id="@+id/btnAccept"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_accepted_back"
                    android:onClick="@{(v) -> eventViewModel.clickListener(v)}"
                    android:text="@string/accept"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/button_text_size" />

            <Button
                    android:id="@+id/btnReject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rejected_back"
                    android:onClick="@{(v) -> eventViewModel.clickListener(v)}"
                    android:text="@string/reject"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/button_text_size" />
        </LinearLayout>
    </RelativeLayout>

</layout>