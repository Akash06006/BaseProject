<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="verifViewModel"
                type="com.android.sidewalk.viewmodels.OTPVerificationModel" />

    </data>

    <LinearLayout
            android:id="@+id/cl_mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F7F7"
            android:orientation="vertical"
            app:hideKeyBoardOnClick="@{`back`}">

        <include
                android:id="@+id/toolbarCommon"
                layout="@layout/common_toolbar_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:visibility="gone" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:background="@drawable/ic_top_back_big"
                android:gravity="center"
                android:orientation="vertical">
            <!--ic_logo_icon-->
            <!--<TextView
                    android:id="@+id/txtRest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="@string/app_name"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

            <TextView
                    android:id="@+id/txtRest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />-->
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_logo_icon" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_top_circle"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/enter_otp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

            <TextView
                    android:id="@+id/tv_otp_sent"
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:lines="4"
                    android:text="@string/otp_verification_text"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone"
                    app:font="@{`regular`}"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="306dp" />

            <TextView
                    android:id="@+id/tv_otp_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_10"
                    app:font="@{`semibold`}" />

            <com.goodiebag.pinview.Pinview
                    android:id="@+id/pinview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    app:cursorVisible="false"
                    app:forceKeyboard="false"
                    app:hint=""
                    app:inputType="number"
                    app:password="false"
                    app:pinBackground="@drawable/ic_otp_cell_back"
                    app:pinHeight="@dimen/dp_45"
                    app:pinLength="6"
                    app:pinWidth="33dp"
                    app:textSize="7sp" />

            <TextView
                    android:id="@+id/tv_resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="@{(v) -> verifViewModel.clickListener(v)}"

                    android:text="@string/resend_otp"
                    android:textColor="@color/colorSecondary"
                    android:textSize="@dimen/sp_14"
                    app:font="@{`regular`}" />

            <Button
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/shape_button_back"
                    android:onClick="@{(v) -> verifViewModel.clickListener(v)}"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:text="@string/verify"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/btn_text"
                    app:font="@{`regular`}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

    </LinearLayout>
</layout>