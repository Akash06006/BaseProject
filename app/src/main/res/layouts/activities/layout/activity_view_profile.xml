<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.android.sidewalk.common.BindingUtils" />

        <variable
                name="loginViewModel"
                type="com.android.sidewalk.viewmodels.profile.ProfileViewModel" />

        <variable
                name="profileResponse"
                type="com.android.sidewalk.model.profile.ProfileResponse.Data" />

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F7F7"
            android:orientation="vertical"
            app:hideKeyBoardOnClick="@{`back` }">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F7F7">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_bottom_round"
                        android:orientation="vertical">

                    <include
                            android:id="@+id/toolbarCommon"
                            layout="@layout/common_toolbar_back"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_55"
                            android:onClick="@{(v) -> loginViewModel.clickListener(v)}" />

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_profile"
                            android:layout_width="@dimen/dp_130"
                            android:layout_height="@dimen/dp_130"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_40"
                            android:contentDescription="@string/todo"
                            android:src="@{profileResponse.image!=null ?  profileResponse.image.toString():@string/todo,default=@drawable/ic_user_profile}"
                            app:civ_border_color="@color/colorWhite"
                            app:civ_border_width="@dimen/dp_10" />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_profile"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_20"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/txtUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="@{profileResponse.firstName+' '+profileResponse.lastName}"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:font="@{`bold`}" />

                        <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@{profileResponse.email}"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:visibility="visible"
                                app:font="@{`regular`}" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/shape_round_corner_white"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/txtid"
                                android:layout_width="@dimen/dp_110"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="@dimen/dp_10"
                                android:text="@string/sidewalk_id"
                                android:textAllCaps="false"
                                android:textColor="@color/lightGrey"
                                android:textSize="@dimen/sp_14"
                                android:visibility="visible"
                                app:font="@{`regular`}" />

                        <TextView
                                android:id="@+id/txtid_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="@dimen/dp_10"
                                android:text="@{profileResponse.sideWalkId}"
                                android:textAllCaps="false"
                                android:textColor="@color/colorProfileText"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:font="@{`bold`}" />

                    </LinearLayout>

                    <View

                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:alpha="0.5"
                            android:background="@color/colorGrey1" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/txtmobile"
                                android:layout_width="@dimen/dp_110"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="@dimen/dp_10"
                                android:text="@string/mobile_no"
                                android:textAllCaps="false"
                                android:textColor="@color/lightGrey"
                                android:textSize="@dimen/sp_14"
                                android:visibility="visible"
                                app:font="@{`regular`}" />

                        <TextView
                                android:id="@+id/txtmobile_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="@dimen/dp_10"
                                android:text="@{profileResponse.phoneNumber}"
                                android:textAllCaps="false"
                                android:textColor="@color/colorProfileText"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:font="@{`bold`}" />

                    </LinearLayout>

                    <View

                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:alpha="0.5"
                            android:background="@color/colorGrey1" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/txtemail"
                                android:layout_width="@dimen/dp_110"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="@dimen/dp_10"
                                android:text="@string/email"
                                android:textAllCaps="false"
                                android:textColor="@color/lightGrey"
                                android:textSize="@dimen/sp_14"
                                android:visibility="visible"
                                app:font="@{`regular`}" />

                        <TextView
                                android:id="@+id/txtemail_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="@dimen/dp_10"
                                android:text="@{profileResponse.email}"
                                android:textAllCaps="false"
                                android:textColor="@color/colorProfileText"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:font="@{`bold`}" />

                    </LinearLayout>

                    <View

                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:alpha="0.5"
                            android:background="@color/colorGrey1" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="@dimen/dp_110"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="@dimen/dp_10"
                                android:text="@string/experiencce"
                                android:textAllCaps="false"
                                android:textColor="@color/lightGrey"
                                android:textSize="@dimen/sp_14"
                                android:visibility="visible"
                                app:font="@{`regular`}" />

                        <TextView
                                android:id="@+id/txtexp_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="@dimen/dp_10"
                                android:text="@{profileResponse.experience}"
                                android:textAllCaps="false"
                                android:textColor="@color/colorProfileText"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:font="@{`bold`}" />

                    </LinearLayout>

                    <View

                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorGrey1"
                            android:visibility="gone" />

                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginTop="10dp"
                        android:text="@string/vendor_licens"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        app:font="@{`semibold`}"
                        tools:ignore="AllCaps" />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_150"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:background="@drawable/shape_round_corner_white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_weight="1">

                        <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/imgFront"
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:background="@drawable/ic_img_back"
                                android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="12dp"
                                app:riv_mutate_background="true" />

                    </RelativeLayout>
                    <!--</androidx.cardview.widget.CardView>-->

                    <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1">

                        <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/imgBack"
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:background="@drawable/ic_img_back"
                                android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="12dp"
                                app:riv_mutate_background="true" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>