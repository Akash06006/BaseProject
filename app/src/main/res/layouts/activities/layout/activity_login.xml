<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.android.sidewalk.common.BindingUtils" />

        <variable
                name="loginViewModel"
                type="com.android.sidewalk.viewmodels.LoginViewModel" />

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F7F7"
            android:orientation="vertical"
            app:hideKeyBoardOnClick="@{`back` }">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7F7F7">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        android:background="@drawable/ic_top_back"
                        android:gravity="center"
                        android:orientation="vertical">
                    <!--ic_logo_icon-->
                    <!--<TextView
                            android:id="@+id/txtRest1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:text="@string/app_name"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            app:font="@{`bold`}"
                            tools:ignore="AllCaps" />

                    <TextView
                            android:id="@+id/txtRest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/restaurant"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            app:font="@{`bold`}"
                            tools:ignore="AllCaps" />-->
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_logo_icon" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="-30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/ic_top_circle"
                        android:elevation="5dp"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="@string/log_in"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            app:font="@{`bold`}"
                            tools:ignore="AllCaps" />

                    <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:hint="@string/email"
                            android:imeOptions="actionNext"
                            android:paddingBottom="15dp"
                            android:singleLine="true"
                            android:visibility="gone" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/ic_edt_back"
                            android:gravity="center">

                        <com.hbb20.CountryCodePicker
                                android:id="@+id/btn_ccp"
                                android:layout_width="@dimen/dp_120"
                                android:layout_height="@dimen/dp_35"
                                android:layout_gravity="center_vertical"
                                android:elevation="@dimen/dp_10"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_5"
                                app:ccpDialog_showNameCode="false"
                                app:ccp_arrowSize="@dimen/dp_20"
                                app:ccp_clickable="true"
                                app:ccp_contentColor="@color/colorBlack"
                                app:ccp_defaultPhoneCode="91"
                                app:ccp_showFlag="true"
                                app:ccp_showPhoneCode="true"
                                app:ccp_textSize="@dimen/sp_14" />

                        <EditText
                                android:id="@+id/edtMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="@string/mob_no"
                                android:imeOptions="actionDone"
                                android:inputType="phone"
                                android:singleLine="true" />
                    </LinearLayout>

                    <TextView
                            android:id="@+id/txtForgot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="10dp"
                            android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                            android:text="@string/forgot_password"
                            android:textAllCaps="false"
                            android:textColor="@color/colorForgotPassword"
                            android:visibility="gone"
                            app:font="@{`regular`}"
                            tools:ignore="AllCaps" />

                    <Button
                            android:id="@+id/btnLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/shape_button_back"
                            android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                            android:text="@string/login"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/button_text_size" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="@string/login_with"
                            android:textAllCaps="false"
                            android:textColor="#25666C"
                            android:textStyle="bold"
                            app:font="@{`semibold`}"
                            tools:ignore="AllCaps" />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">

                        <RelativeLayout
                                android:id="@+id/googleLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/ic_google_login"
                                android:elevation="2dp"
                                android:onClick="@{(v) -> loginViewModel.clickListener(v)}">
                            <!-- -->
                            <!--<ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                     />-->

                        </RelativeLayout>

                        <RelativeLayout
                                android:id="@+id/fbLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/ic_fb_login"
                                android:elevation="2dp"
                                android:onClick="@{(v) -> loginViewModel.clickListener(v)}">
                            <!-- android:elevation="5dp"-->
                            <!--<ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/ic_facebook" />
-->
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_20"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/new_user"
                                android:textAllCaps="false"
                                android:textColor="@color/colorSecondary"
                                android:textStyle="bold"
                                app:font="@{`bold`}"
                                tools:ignore="AllCaps" />

                        <Button
                                android:id="@+id/txtSignup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="5dp"
                                android:background="@drawable/shape_button_back_secondary"
                                android:minWidth="150dp"
                                android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"
                                android:text="@string/signup"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:font="@{`bold`}"
                                tools:ignore="AllCaps" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_25"
                android:text="@string/log_in"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_20"
                android:visibility="gone"
                app:font="@{`regular`}"
                tools:ignore="AllCaps" />

        <View
                android:id="@+id/v_underemail"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/colorWhite2"
                android:visibility="gone" />

        <ImageView
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/round_layout"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_arrow_forward"
                android:textColor="@color/colorWhite"
                android:visibility="gone"

                />
        <!-- android:onClick="@{(v) -> loginViewModel.clickListener(v,etEmail.getText().toString(), etPassword.getText().toString())}"-->
    </LinearLayout>

</layout>