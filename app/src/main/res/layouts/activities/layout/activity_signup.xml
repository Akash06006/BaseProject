<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.android.sidewalk.common.BindingUtils" />

        <variable
                name="loginViewModel"
                type="com.android.sidewalk.viewmodels.LoginViewModel" />

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F7F7"
            android:orientation="vertical"
            app:hideKeyBoardOnClick="@{`back` }">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7F7F7">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        android:background="@drawable/ic_top_back"
                        android:gravity="center"
                        android:orientation="vertical">

                    <!--<TextView
                            android:id="@+id/txtRest1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:text="@string/app_name"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            app:font="@{`bold`}"
                            tools:ignore="AllCaps" />

                    <TextView
                            android:id="@+id/txtRest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/restaurant"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            app:font="@{`bold`}"
                            tools:ignore="AllCaps" />-->
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_logo_icon" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="-20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/ic_top_circle"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="15dp">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="-50dp"
                            android:clipChildren="false"
                            android:clipToPadding="false">

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_profile"
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="@dimen/dp_100"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/todo"
                                android:src="@drawable/ic_user_profile"
                                app:civ_border_color="@color/colorWhite"
                                app:civ_border_width="5dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_edit"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignEnd="@+id/img_profile"
                                android:layout_alignRight="@+id/img_profile"
                                android:layout_alignBottom="@+id/img_profile"
                                android:background="@drawable/ic_edit_image"
                                android:elevation="@dimen/dp_10"
                                android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                                android:padding="@dimen/dp_8"
                                tools:targetApi="lollipop" />

                    </RelativeLayout>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="@string/signup"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            app:font="@{`bold`}"
                            tools:ignore="AllCaps" />

                    <EditText
                            android:id="@+id/edtFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_edt_back"
                            android:hint="@string/fname"
                            android:imeOptions="actionNext"
                            android:maxLength="16"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textSize="14sp"
                            app:font="@{`regular`}" />

                    <EditText
                            android:id="@+id/edtLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_edt_back"
                            android:hint="@string/lname"
                            android:imeOptions="actionNext"
                            android:maxLength="16"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textSize="14sp"
                            app:font="@{`regular`}" />

                    <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_edt_back"
                            android:hint="@string/email"
                            android:imeOptions="actionNext"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textSize="14sp"
                            app:font="@{`regular`}" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_edt_back"
                            android:paddingLeft="15dp">

                        <com.hbb20.CountryCodePicker
                                android:id="@+id/btn_ccp"
                                android:layout_width="@dimen/dp_120"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:elevation="@dimen/dp_10"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_5"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingRight="@dimen/dp_5"
                                android:paddingBottom="@dimen/dp_2"
                                app:ccpDialog_showNameCode="false"
                                app:ccp_arrowSize="@dimen/dp_20"
                                app:ccp_clickable="true"
                                app:ccp_contentColor="@color/colorBlack"
                                app:ccp_defaultPhoneCode="91"
                                app:ccp_showFlag="true"
                                app:ccp_showPhoneCode="true"
                                app:ccp_textSize="@dimen/sp_14" />

                        <EditText
                                android:id="@+id/edtPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@null"
                                android:digits="0123456789"
                                android:hint="@string/mob_no"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textSize="14sp"
                                app:font="@{`regular`}" />
                    </LinearLayout>

                    <Spinner
                            android:id="@+id/txtDate"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_edt_back"
                            android:gravity="center"
                            android:overlapAnchor="false"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="Today"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/vendor_license"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="16dp"
                            app:font="@{`semibold`}"
                            tools:ignore="AllCaps" />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                        <!--  <androidx.cardview.widget.CardView
                                  android:id="@+id/cv_record"
                                  android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  app:cardCornerRadius="4dp"
                                  app:cardElevation="2dp"
                                  app:cardUseCompatPadding="true">-->

                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="130dp"
                                android:layout_weight="1">

                            <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/imgFront"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:background="@drawable/ic_img_back"
                                    android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                                    android:scaleType="centerCrop"
                                    app:riv_corner_radius="12dp"
                                    app:riv_mutate_background="true" />

                            <ImageView
                                    android:id="@+id/imgFrontPlus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_img_plus" />

                            <TextView
                                    android:id="@+id/txtFront"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imgFrontPlus"
                                    android:layout_centerInParent="true"
                                    android:text="@string/front" />

                        </RelativeLayout>
                        <!--</androidx.cardview.widget.CardView>-->

                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="130dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1">

                            <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/imgBack"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:background="@drawable/ic_img_back"
                                    android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                                    android:scaleType="centerCrop"
                                    app:riv_corner_radius="12dp"
                                    app:riv_mutate_background="true" />

                            <ImageView
                                    android:id="@+id/imgBackPlus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_img_plus" />

                            <TextView
                                    android:id="@+id/txtBack"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imgBackPlus"
                                    android:layout_centerInParent="true"
                                    android:text="@string/back" />
                        </RelativeLayout>

                    </LinearLayout>

                    <CheckBox
                            android:id="@+id/chkTerms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/agree_terms"
                            android:textColor="@color/terms_color" />

                    <!-- android:textStyle="bold"-->
                </LinearLayout>

                <Button
                        android:id="@+id/btnSignup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_button_back"
                        android:onClick="@{(v) -> loginViewModel.clickListener(v)}"
                        android:text="@string/signup"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/button_text_size"
                        app:font="@{`regular`}" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>